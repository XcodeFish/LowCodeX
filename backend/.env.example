# 环境
NODE_ENV=development


# HTTP服务器
PORT=9000
API_PREFIX=api
API_VERSION=v1
GLOBAL_PREFIX=true

# 数据库配置 - MySQL
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=root
DB_DATABASE=admin_flow
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis连接
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=30d

# 日志配置
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# 跨域配置
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# 多租户配置
TENANT_MODE=database  # database, schema 或 column
TENANT_ID_FIELD=tenantId

# 邮件服务配置 (可选)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=user@example.com
MAIL_PASSWORD=password
MAIL_FROM=noreply@adminflow.com
